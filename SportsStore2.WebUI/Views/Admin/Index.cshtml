@model IEnumerable<SportsStore2.Domain.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        @if (TempData["message"] != null)
        {
            <div>
                <span class="lead text-info">@TempData["message"].ToString()</span>
            </div>
        }
        <h3>All Products</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    ID
                </th>
                <th>
                    Name
                </th>
                <th class="text-right">
                    Price
                </th>
                <th class="text-center">
                    Category
                </th>
                <th>
                    Description
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.ProductID)
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new { p_ProductID = item.ProductID })
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { p_ProductID = item.ProductID })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        <p>
            @Html.ActionLink("Create New", "Edit", new { p_ProductID = 0 }, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>




