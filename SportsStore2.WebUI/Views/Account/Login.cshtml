@model SportsStore2.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary()
        <div class="form-group">
            <label>User Name</label>
            @Html.TextBoxFor(e => e.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(e=>e.UserName)
        </div>

        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(e => e.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.Password)
        </div>

        <input type="submit" class="btn btn-success" value="Login" />
    </div>
}

